{
    "routes" : [
        {
            "rule" : "/",
            "option" : {
                "module" : "Site",
                "controller" : "Index",
                "action" : "index"
            }
        },
        {
            "rule" : "/news/{pageId:[1-9][0-9]*}.html",
            "option" : {
                "module" : "Site",
                "controller" : "Index",
                "action" : "newslist"
            }
        },
        {
            "rule" : "/404.html",
            "option" : {
                "module" : "Site",
                "controller" : "Exception",
                "action" : "notfind"
            }
        }
    ],
    "hostName" : true,
    "tplMap" : {
        "site/index" : "企业网站/首页.phtml",
        "site/newslist" : "企业网站/新闻列表.phtml",
        "site/404" : "404.phtml"
    }
}