{
    "routes" : [
        {
            "rule" : "/",
            "option" : {
                "module" : "Site",
                "controller" : "Index",
                "action" : "index"
            }
        },
        {
            "rule" : "/news/{nodeIdentifier:[a-z]+}.html",
            "option" : {
                "module" : "Site",
                "controller" : "Index",
                "action" : "newslist"
            }
        },
        {
            "rule" : "/news/{nodeIdentifier:[a-z]+}/{pageid:[1-9][0-9]*}.html",
            "option" : {
                "module" : "Site",
                "controller" : "Index",
                "action" : "newslist"
            }
        },
        {
            "rule" : "/404.html",
            "option" : {
                "module" : "Site",
                "controller" : "Exception",
                "action" : "notfind"
            }
        },
        {
            "rule" : "/news/{newsid:[1-9][0-9]*}.html",
            "option" : {
                "module" : "Site",
                "controller" : "Index",
                "action" : "news"
            }
        }
    ],
    "hostName" : true,
    "tplMap" : {
        "site/index" : "企业网站/首页.phtml",
        "site/404" : "404.phtml"
    }
}